{% extends "::base.html.twig" %}

{% block title %}AppBundle:PrivateSpace:PrivateSpace{% endblock %}

{% block body %}
<h1>Welcome to the PrivateSpace:PrivateSpace page</h1>
<h2>Ma liste d'ami bonobo</h2>
<ul>
	{% for friend in friends %}
		<li>{{ friend.username|e }} - <a href="delete-from-friends/{{ friend.id|e }}">Delete from friends</a></li>
	{% endfor %}
</ul>


<h2>Liste des bonobos inscris sur le site</h2>
<ul>
    {% for user in users %}
        <li>{{ user.username|e }} - <a href="add-to-friend/{{ user.id|e }}">Add to friend</a></li>
    {% endfor %}
</ul>
{% endblock %}
